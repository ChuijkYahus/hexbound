{
    "schema_version": 1,
    "quilt_loader": {
        "group": "coffee.cypher",
        "id": "hexbound",
        "version": "${version}",
        "metadata": {
            "name": "Hexbound",
            "description": "Addon for Hexcasting adding programmable Constructs and more",
            "contributors": {
                "Cypher121": "Owner"
            },
            "contact": {
                "homepage": "https://github.com/Cypher121/hexbound",
                "issues": "https://github.com/Cypher121/hexbound/issues",
                "sources": "https://github.com/Cypher121/hexbound"
            },
            "icon": "assets/hexbound/icon.png"
        },
        "intermediate_mappings": "net.fabricmc:intermediary",
        "entrypoints": {
            "init": {
                "value": "coffee.cypher.hexbound.init.Hexbound",
                "adapter": "kotlin"
            },
            "client_init": {
                "value": "coffee.cypher.hexbound.init.HexboundClient",
                "adapter": "kotlin"
            },
            "cardinal-components": {
                "value": "coffee.cypher.hexbound.init.HexboundComponents",
                "adapter": "kotlin"
            },
            "dynamiclights" : {
                "value": "coffee.cypher.hexbound.interop.dynlights.LambDynamicLightsInterop",
                "adapter": "kotlin"
            }
        },
        "depends": [
            {
                "id": "quilt_loader",
                "versions": ">=0.18.3-"
            },
            {
                "id": "quilted_fabric_api",
                "versions": ">=4.0.0-beta.29"
            },
            {
                "id": "minecraft",
                "versions": ">=1.20.1"
            },
            {
                "id": "hexcasting",
                "versions": ">=0.10.3"
            },
            {
                "id": "hexal",
                "versions": ">=0.2.17",
                "optional": true
            },
            {
                "id": "kettle",
                "versions": ">=2.2.1"
            },
            {
                "id": "geckolib",
                "versions": ">=4.2.1"
            },
            {
                "id": "qkl",
                "versions": ">=1.0.0"
            }
        ]
    },
    "cardinal-components": [
        "hexbound:memorized_pigments",
        "hexbound:construct_linkable"
    ],
    "mixin": "hexbound.mixins.json",
	"access_widener": "hexbound.accesswidener"
}
